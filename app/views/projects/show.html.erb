<h2><%= @project.title %></h2>
<div>
  <%= link_to "Create a New List List", new_project_list_path(@project) %>
</div>
<div>
  <%= link_to "See who is involved", project_project_roles_path(@project)%>
</div>

<div>
  <ul>
  <% @project.lists.each do |list| %>
    <li><%= list.title %></li>

    <ul><% list.tasks.each do |task| %>
        <% if task.user_id.nil? %>
        <li><%= task.title %> | <%= link_to 'assign task to user', edit_list_task_path(task.list_id, task.id) %></li>
        <% else %>
      <li><%= task.title %> | <%= task.user_id %></li>
      <% end %>
    <% end %>
    </ul>
  <%end%>
  </ul>
</div>